{
    "name": "Lazygit",
    "id": "lazygit",
    "documentationURL": "https://github.com/j2udev/devcontainer-features/tree/main/src/lazygit",
    "licenseURL": "https://github.com/j2udev/devcontainer-features/blob/main/LICENSE",
    "version": "0.3.1",
    "description": "Install Lazygit",
    "options": {
        "version": {
            "type": "string",
            "enum": [
              "0.44.1",
              "0.44.0",
              "0.43.1",
              "0.43.0"
            ],
            "default": "0.44.1",
            "description": "Select a Lazygit version"
        },
        "enable_config": {
            "type": "boolean",
            "default": true,
            "description": "Whether to create sane default config"
        },
        "enable_alias": {
            "type": "boolean",
            "default": true,
            "description": "Whether to create an alias for lazygit (lzg)"
        }
    },
    "installsAfter": [
        "ghcr.io/devcontainers/features/common-utils"
    ]
}