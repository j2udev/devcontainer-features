{
    "name": "bat",
    "id": "bat",
    "documentationURL": "https://github.com/j2udev/devcontainer-features/tree/main/src/bat",
    "licenseURL": "https://github.com/j2udev/devcontainer-features/blob/main/LICENSE",
    "version": "0.3.1",
    "description": "Install bat",
    "options": {
        "bin_dir": {
            "type": "string",
            "proposals": [
              "/usr/local/bin"
            ],
            "default": "/usr/local/bin",
            "description": "Select a directory that is on your PATH"
        },
        "install_dir": {
            "type": "string",
            "proposals": [
              "/opt"
            ],
            "default": "/opt",
            "description": "Select a directory where supplementary files will be saved"
        },
        "version": {
            "type": "string",
            "proposals": ["0.24.0"],
            "default": "0.24.0",
            "description": "Select a bat version"
        },
        "theme": {
            "type": "string",
            "proposals": [
                "default",
                "Dracula",
                "GitHub",
                "gruvbox-dark",
                "gruvbox-light",
                "Monokai Extended",
                "Nord",
                "OneHalfDark",
                "OneHalfLight",
                "Solarized (dark)",
                "Solarized (light)",
                "TwoDark"
            ],
            "default": "default",
            "description": "Select a bat theme"
        }
    }
}
